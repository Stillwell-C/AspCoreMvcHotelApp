@{
    string pageTitle = ViewBag?.PageTitle != null ? $"{ViewBag.PageTitle} | Hotel Finder" : "Hotel Finder";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
 <link href="~/Styles.css" rel="stylesheet" />
 <title>@pageTitle</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary">
            <div class="container">
                <a class="navbar-brand text-light" asp-controller="Home" asp-action="Index">HotelFinder</a>
                <button class="navbar-toggler navbar-dark" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Index">
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Hotels" asp-action="ViewAll">
                                Browse Hotels
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div style="min-height: calc(100vh - 250px)">
        @RenderBody()
    </div>
    <footer class="navbar bg-primary pt-5" style="margin-top: 5rem">
        <div class="container">
            <div class="w-100 d-flex justify-content-center gap-5 flex-wrap">
                <div class="text-white">
                    <h3 class="fs-5">About</h3>
                    <ul class="list-unstyled">
                        <li><a href="https://github.com/Stillwell-C" target="_blank" class="text-white">Github</a></li>
                        <li><a href="https://www.christopherstillwell.com/" target="_blank" class="text-white">About me</a></li>
                    </ul>
                </div>
                <div class="text-white">
                    <h3 class="fs-5">Hotels</h3>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Hotels" asp-action="ViewAll" class="text-white">Browse Hotels</a></li>
                        <li><a asp-controller="Hotels" asp-action="Search" asp-route-searchterm="Europe" class="text-white">Europe</a></li>
                        <li><a asp-controller="Hotels" asp-action="Search" asp-route-searchterm="Asia" class="text-white">Asia</a></li>
                        <li><a asp-controller="Hotels" asp-action="Search" asp-route-searchterm="North America" class="text-white">North America</a></li>
                        <li><a asp-controller="Hotels" asp-action="Search" asp-route-searchterm="South America" class="text-white">South America</a></li>
                        <li><a asp-controller="Hotels" asp-action="Search" asp-route-searchterm="Africa" class="text-white">Africa</a></li>
                    </ul>
                </div>
                <div class="text-white">
                    @{
                        await Html.RenderPartialAsync("_LoginPartialFooter");
                    }
                </div>
            </div>
            <div class="w-100 pt-5 pb-2">
                <div class="text-white text-center"><a href="https://github.com/Stillwell-C" target="_blank" class="text-white text-decoration-none">Stillwell-C</a> &copy; <span id="presentYearFooter"></span></div>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"
            integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g="
            crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $(document).ready(function () { 
            var presentDate = new Date()

            $('#presentYearFooter').text(presentDate.getFullYear())
        })
    </script>
</body>
</html>